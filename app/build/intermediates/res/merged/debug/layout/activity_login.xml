<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.niklas.instance.LoginActivity">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:id="@+id/LogoImage"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="INSTANCE"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:id="@+id/NameText"
        android:layout_below="@+id/LogoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/messageText"
        android:hint="Username"
        android:textAlignment="center"
        android:layout_marginTop="127dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_below="@+id/LogoImage"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="false"
        android:backgroundTint="#BE1707" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordText"
        android:hint="Password"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_below="@+id/messageText"
        android:layout_alignStart="@+id/messageText"
        android:backgroundTint="#BE1707" />

    <Button
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:text="Sign in / Register"
        android:id="@+id/LoginBtn"
        android:textAlignment="center"
        android:layout_below="@+id/PasswordText"
        android:layout_alignStart="@+id/PasswordText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="#BE1707"
        android:onClick="loginBtn_Clicked" />

</RelativeLayout>
